<Window x:Class="DALTUDTXD.Views.LoginView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:local="clr-namespace:DALTUDTXD.Views"
        mc:Ignorable="d" 
        d:DesignHeight="550" d:DesignWidth="850"
        Title="LoginView"
        WindowStyle="None"       
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True"
        MouseLeftButtonDown="Window_MouseLeftButtonDown" >

    
    <Border CornerRadius="20">
        <Border.Background>
            <ImageBrush ImageSource="/Images/BG.png" Stretch="UniformToFill"/>
        </Border.Background>
        <Border CornerRadius="15" BorderThickness="3" Opacity="0.8">
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#5390D9" Offset="0"/>
                    <GradientStop Color="#023E8A" Offset="0.75"/>
                    <GradientStop Color="#0077B6" Offset="1"/>
                </LinearGradientBrush>
            </Border.BorderBrush>
            <Border.Background>
                <LinearGradientBrush StartPoint="1,0" EndPoint="0,1">
                    <GradientStop Color="#90E0EF" Offset="0"/>
                    <GradientStop Color="#0077B6" Offset="0.75"/>
                    <GradientStop Color="#03045E" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="25"/>
                        <ColumnDefinition Width="25"/>
                        <ColumnDefinition Width="5"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="LOG IN " 
                               Foreground="#03045E"
                               FontFamily="Montserrat" 
                               FontSize="12"
                               VerticalAlignment="Center"
                               Margin="10,0,0,0"/>
                    <Button x:Name="btnMinimize"                            
                            BorderThickness="0"
                            Content="-"              
                            Foreground="Wheat"
                            FontFamily="Montserrat"
                            Cursor="Hand"
                            Grid.Column="1" 
                            FontSize="50" 
                            Click="btnMinimize_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#0096C7" />
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#023E8A"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="18" Height="18"
                                        CornerRadius="10" 
                                        Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    <Button x:Name="btnClose"                           
                            BorderThickness="0"
                            Content="x"
                            Foreground="#0077B6"
                            FontFamily="Montserrat"
                            Cursor="Hand"
                            Grid.Column="2" 
                            FontSize="16" 
                            Click="btnClose_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#0096C7" />
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="Red"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="18" Height="18"
                                        CornerRadius="10" 
                                        Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>
                <!-- Sửa Grid.Row của StackPanel thành 1 vì chỉ có 2 RowDefinition -->
                <StackPanel Width="250" Grid.Row="1" Orientation="Vertical" Margin="0,35,0,0">
                    <Image Source="/Images/engineering.png" Width="100" Height="100"/>
                    <TextBlock Margin="0,10,0,0" Text="SF Cal" Foreground="White" FontSize="25" FontWeight="Medium" FontFamily="Montserrat" HorizontalAlignment="Center"/>
                    <TextBlock Text="Tính toán và thiết kế móng băng" Foreground="#90E0EF" FontSize="15" FontWeight="Medium" FontFamily="Montserrat" HorizontalAlignment="Center"/>
                    <TextBlock Margin="0,35,0,0" Text="Username" Foreground="#90E0EF" FontSize="15" FontWeight="Light" FontFamily="Montserrat"/>
                    <TextBox x:Name="txtUser"
                             FontSize="13"
                             Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                             FontFamily="Montserrat"
                             FontWeight="Heavy"                           
                             Foreground="White"
                             CaretBrush="Gray"
                             BorderBrush="#023E8A"
                             BorderThickness="0,0,0,3"
                             Height="25"
                             VerticalAlignment="Center"
                             Margin="0,5,0,0"
                             Padding="25,0,0,-10">
                        <TextBox.Background>
                            <ImageBrush ImageSource="/Images/user.png" Stretch="Uniform" AlignmentX="Left"/>
                        </TextBox.Background>
                    </TextBox>

                    <PasswordBox x:Name="txtPassword"
                                 FontSize="13"                                 
                                 FontFamily="Montserrat"
                                 FontWeight="Heavy"                           
                                 Foreground="White"
                                 CaretBrush="Gray"
                                 BorderBrush="#023E8A"
                                 BorderThickness="0,0,0,3"
                                 Height="25"
                                 VerticalAlignment="Center"                       
                                 Padding="25,0,0,-10" 
                                 Margin="0,10,0,0">
                        <PasswordBox.Background>
                            <ImageBrush ImageSource="/DALTUDTXD;component/Images/lock.png" Stretch="Uniform" AlignmentX="Left"/>
                        </PasswordBox.Background>
                    </PasswordBox>

                    <!-- TextBlock hiển thị lỗi (mặc định rỗng) -->
                    <TextBlock x:Name="txtError" TextWrapping="Wrap" Margin="0,12,0,0" Foreground="Red" FontSize="15" FontWeight="Light" FontFamily="Montserrat" />

                    <!-- Gán sự kiện Click cho nút đăng nhập -->
                    <Button x:Name="btnLogin" BorderThickness="0" Content="LOG IN" Foreground="White" FontFamily="Montserrat" Cursor="Hand" FontSize="16" Margin="0,30,0,0" Click="btnLogin_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#03045E" />
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#023E8A"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="150" Height="40"
                                        CornerRadius="20" 
                                        Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15,0,0">
                        <TextBlock Text="Forgot Password ?" Foreground="#90E0EF" FontSize="15" FontWeight="Light" FontFamily="Montserrat"/>
                        <TextBlock Text="Reset"
           Foreground="#90E0EF"
           FontSize="15"
           FontWeight="Medium"
           FontFamily="Montserrat"
           Cursor="Hand"
           Margin="5,0,0,0"
           MouseLeftButtonDown="Reset_Click"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>
    </Border>
</Window>
